{
  "name": "neofermi",
  "version": "0.1.0",
  "description": "A mobile-friendly, web-based DSL for order of magnitude calculations with Monte Carlo uncertainty propagation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "neoferminb": "./bin/neoferminb.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "vite",
    "parser:build": "peggy --format es --output src/parser/generated.js src/parser/grammar.peggy",
    "prebuild": "pnpm parser:build",
    "build": "tsc && vite build",
    "build:cli": "node scripts/build-cli.js",
    "notebook": "node --import tsx src/cli/index.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fermi-estimation",
    "monte-carlo",
    "uncertainty",
    "units",
    "dimensional-analysis",
    "probability"
  ],
  "author": "Alex Alemi <alexalemi@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "hono": "^4.7.4",
    "jstat": "^1.9.6",
    "mathjs": "^14.0.1",
    "open": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^2.1.8",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "peggy": "^5.0.6",
    "prettier": "^3.5.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
